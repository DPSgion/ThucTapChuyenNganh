<head>
    <link rel="stylesheet" href="/css/signin_signout.css">
</head>

<div class="auth-container" style="background-image: url('images/bg_1.jpg');">
    <div class="auth-box">
        <div class="auth-header">
            <h2 id="mainTitle">Đăng nhập</h2>
        </div>

        <div class="auth-tabs">
            <button class="auth-tab active" onclick="switchTab('login')">Đăng Nhập</button>
            <button class="auth-tab" onclick="switchTab('register')">Đăng Ký</button>
        </div>

        <!-- Form Đăng Nhập -->
        <form class="auth-form active" id="loginForm">
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" placeholder="your@email.com" required>
            </div>

            <div class="form-group">
                <label>Mật Khẩu</label>
                <input type="password" class="form-control" placeholder="••••••••" required>
            </div>

            <div class="checkbox-group">
                <input type="checkbox" id="remember">
                <label for="remember">Ghi nhớ đăng nhập</label>
            </div>

            <div class="forgot-link">
                <a href="#" onclick="openForgotModal(); return false;">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="btn-submit">Đăng Nhập</button>
        </form>

        <!-- Form Đăng Ký -->
        <form class="auth-form" id="registerForm">
            <div class="form-group">
                <label>Họ và Tên</label>
                <input type="text" class="form-control" placeholder="Nguyễn Văn A" required>
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" placeholder="your@email.com" required>
            </div>

            <div class="form-group">
                <label>Mật Khẩu</label>
                <input type="password" class="form-control" placeholder="••••••••" required>
            </div>

            <div class="form-group">
                <label>Xác Nhận Mật Khẩu</label>
                <input type="password" class="form-control" placeholder="••••••••" required>
            </div>

            <div class="checkbox-group">
                <input type="checkbox" id="terms" required>
                <label for="terms">Tôi đồng ý với Điều khoản & Điều kiện</label>
            </div>

            <button type="submit" class="btn-submit">Đăng Ký</button>
        </form>

        <div class="back-home">
            <a href="/">← Quay lại trang chủ</a>
        </div>
    </div>
</div>

<script>
    // Chuyển đổi giữa tab đăng nhập và đăng ký
    function switchTab(tab) {
        const tabs = document.querySelectorAll('.auth-tab');
        const forms = document.querySelectorAll('.auth-form');
        const mainTitle = document.getElementById('mainTitle');
        const mainSubtitle = document.getElementById('mainSubtitle');

        tabs.forEach(t => t.classList.remove('active'));
        forms.forEach(f => f.classList.remove('active'));

        if (tab === 'login') {
            tabs[0].classList.add('active');
            document.getElementById('loginForm').classList.add('active');
            mainTitle.textContent = 'Đăng nhập';
        } else {
            tabs[1].classList.add('active');
            document.getElementById('registerForm').classList.add('active');
            mainTitle.textContent = 'Tạo Tài Khoản Mới';
        }
    }

    function openForgotModal() {
        alert('Chức năng quên mật khẩu đang được phát triển!');
    }

