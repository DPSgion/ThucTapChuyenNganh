<style>
    #btnAddTour {
        margin-bottom: 30px;
        cursor: pointer;
        border-radius: 10px;
        padding: 8px 16px;
        border: 1px solid #333;
        background-color: #fff;
    }

    #btnAddTour:hover {
        background-color: #f0f0f0;
    }
</style>

<div class="content-wrapper">
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/admin">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Quản lý tour</li>
        </ol>

        <button id="btnAddTour"
                {{#unless dbReady}}disabled{{/unless}}>
            Thêm tour
        </button>

        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-table"></i> Danh sách tour</div>
            <div class="card-body">

                <div class="table-responsive">

                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Mã tour</th>
                                <th>Tên tour</th>
                                <th>Điểm đi</th>
                                <th>Điểm đến</th>
                                <th>Thời gian đi - về</th>
                                <th>Khách</th>
                                <th colSpan={2}></th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Mã tour</th>
                                <th>Tên tour</th>
                                <th>Điểm đi</th>
                                <th>Điểm đến</th>
                                <th>Thời gian đi - về</th>
                                <th>Khách</th>
                                <th colSpan={2}></th>
                            </tr>
                            </tfoot>
                            <tbody>
                            {{#if dbReady}}
                                {{#each tours}}
                                    <tr>
                                        <td>{{matour}}</td>
                                        <td>{{tentour}}</td>
                                        <td>{{diemdi}}</td>
                                        <td>{{diemden}}</td>
                                        <td>{{formatDate ngaydi}} - {{formatDate ngayve}}</td>
                                        <td>{{soluong}}</td>
                                    </tr>
                                {{/each}}
                            {{else}}
                                <tr>
                                    <td colspan="6" style="color:red;text-align:center;">Chưa kết nối được DB</td>
                                </tr>
                            {{/if}}


                            </tbody>
                        </table>


                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>

</div>

<script>
    document.getElementById('btnAddTour').addEventListener('click', function() {
        // chuyển hướng đến trang addtour
        window.location.href = "/admin/addtour";
    });
</script>