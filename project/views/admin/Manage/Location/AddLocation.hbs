<div class="content-wrapper">
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/admin/managelocations">Quản lý địa điểm</a>
            </li>
            <li class="breadcrumb-item active">Thêm địa điểm</li>
        </ol>

        <div class="container mt-4" style="max-width: 800px;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>Thêm Địa Điểm Mới</h3>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">

                    <form action="/admin/addlocation" method="POST" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label for="ten_dia_diem" class="form-label fw-bold">Tên địa điểm</label>
                            <input type="text" class="form-control" id="ten_dia_diem" name="ten_dia_diem" placeholder="Ví dụ: Phú Quốc, Bến Tre..." required>
                        </div>

                        <div class="mb-3">
                            <label for="mo_ta" class="form-label fw-bold">Mô tả chi tiết</label>
                            <textarea class="form-control" id="mo_ta" name="mo_ta" rows="5" placeholder="Viết giới thiệu về địa điểm này..."></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="hinh_anh_bia" class="form-label fw-bold">Ảnh đại diện (Ảnh bìa)</label>
                                <input type="file" class="form-control" id="hinh_anh_bia" name="hinh_anh_bia" accept="image/*" required>
                                <div class="form-text">Ảnh này sẽ hiện ở trang danh sách.</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="album" class="form-label fw-bold">Album ảnh chi tiết</label>
                                <input type="file" class="form-control" id="album" name="album" multiple accept="image/*">
                                <div class="form-text">Giữ phím <strong>Ctrl</strong> để chọn nhiều ảnh.</div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary px-4">Lưu địa điểm</button>
                            <button type="reset" class="btn btn-light ms-2">Nhập lại</button>
                        </div>

                    </form>

                </div>
            </div>
        </div>

    </div>
</div>