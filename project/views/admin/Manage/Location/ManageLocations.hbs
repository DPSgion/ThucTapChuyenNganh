<style>
    #btnAddLocation {
        margin-bottom: 30px;
        cursor: pointer;
        border-radius: 10px;
        padding: 8px 16px;
        border: 1px solid #333;
        background-color: #fff;
        text-decoration: none;
    }

    #btnAddLocation:hover {
        background-color: #f0f0f0;
    }
</style>

<div class="content-wrapper">
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/admin">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Quản lý tour</li>
        </ol>

        <a href="/admin/addlocation" id="btnAddLocation">
            Thêm địa điểm
        </a>

        <div class="card mb-3" style="margin-top: 30px;">
            <div class="card-header">
                <i class="fa fa-table"></i> Danh sách địa điểm</div>
            <div class="card-body">

                <div class="table-responsive">

                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên địa đểm</th>
                            <th>Trạng thái</th>
                            <th colspan="2">Hành động</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>STT</th>
                            <th>Tên địa đểm</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {{#each locations}}
                            <tr>
                                <td>{{this.ma_dia_diem}}</td>
                                <td>
                                    <img src="/uploads/{{this.hinhdaidien}}" alt="Img" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px; margin-right: 10px;">
                                    {{this.ten_dia_diem}}
                                </td>

                                <td>
                                    {{#if this.trang_thai}} <span class="badge badge-success" style="padding: 8px;">Đang hoạt động</span>
                                    {{else}} <span class="badge badge-secondary" style="padding: 8px;">Đã ngưng</span>
                                    {{/if}}
                                </td>

                                <td>
                                    <a href="/admin/editlocation/{{this.ma_dia_diem}}" class="btn btn-primary btn-sm">
                                        <i class="fa fa-edit"></i> Sửa
                                    </a>

                                    {{#if this.trang_thai}}
                                        <a href="/admin/toggle-status/{{this.ma_dia_diem}}"
                                           class="btn btn-warning btn-sm"
                                           onclick="return confirm('Bạn muốn tạm ngưng địa điểm này?')">
                                                Ngưng
                                        </a>
                                    {{else}}
                                        <a href="/admin/toggle-status/{{this.ma_dia_diem}}"
                                           class="btn btn-success btn-sm"
                                           onclick="return confirm('Kích hoạt lại địa điểm này?')">
                                                Mở lại
                                        </a>
                                    {{/if}}
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>

</div>
