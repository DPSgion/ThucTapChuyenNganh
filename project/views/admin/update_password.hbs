<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/admin">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Update Password</li>
        </ol>
        {{#if error_message}}
            <div class="alert alert-danger">{{error_message}}</div>
        {{/if}}
        {{#if success_message}}
            <div class="alert alert-success">{{success_message}}</div>
        {{/if}}
        {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
        {{/if}}

        {{#if errors}}
            {{#each errors}}
                <div class="alert alert-danger">{{this.message}}</div>
            {{/each}}
        {{/if}}
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="auth-container">
                    <div class="login-wrap">

                        <div id="register-form" >
                            <h3>Cập nhật mật khẩu</h3>

                            <form class="signup-form" action="/admin/update_password" method="POST">

                                <div class="form-group">
                                    <label for="update-password" class="label">Mật khẩu mới</label>
                                    <input name="password" id="update-password" type="password" class="form-control"  >
                                </div>
                                <div class="form-group">
                                    <label for="confirm-password" class="label">Nhập lại mật khẩu</label>
                                    <input name="confirmPassword" id="confirm-password" type="password" class="form-control" >
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn-primary">Lưu mật khẩu</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

</div>


