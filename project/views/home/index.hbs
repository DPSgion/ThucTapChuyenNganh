                                    <div class="two">
                                        <span class="price">{{giavenguoilon}}đ</span>
                                    </div>
                                </div>
                                <p>{{motangan}}</p>
                                <p class="days"><span>{{thoiluong}}</span></p>
                                <hr>
                                <p class="bottom-area d-flex">
                                    <span><i class="icon-map-o"></i> {{diemden}}</span>
                                    <span class="ml-auto"><a href="#">Xem chi tiết</a></span>
                                </p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </section>
{{/if}}





